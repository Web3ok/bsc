# BSC Market Maker Bot Configuration

# RPC Configuration
RPC_URL=https://bsc-dataseed1.binance.org/
RPC_BACKUP_URLS=https://bsc-dataseed2.binance.org/,https://bsc-dataseed3.binance.org/
RPC_MAX_RETRIES=3
RPC_TIMEOUT_MS=10000
RPC_RATE_LIMIT_PER_SECOND=10

# Chain Configuration
CHAIN_ID=56
WBNB_ADDRESS=0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c

# PancakeSwap Configuration
PANCAKESWAP_V2_ROUTER=0x10ED43C718714eb63d5aA57B78B54704E256024E
PANCAKESWAP_V2_FACTORY=0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73
PANCAKESWAP_V3_ROUTER=0x13f4EA83D0bd40E75C8222255bc855a974568Dd4

# Security
ENCRYPTION_PASSWORD=your-strong-encryption-password-here
WALLET_ENCRYPTION_ROUNDS=12

# Default Trading Parameters
DEFAULT_SLIPPAGE=0.5
DEFAULT_DEADLINE_MINUTES=20
MAX_SLIPPAGE=5.0
MAX_PRICE_IMPACT=3.0

# Rate Limiting
MAX_CONCURRENT_TRANSACTIONS=5
TRANSACTION_RATE_LIMIT_PER_SECOND=2
BATCH_SIZE_LIMIT=50

# Gas Configuration
AUTO_GAS=true
MAX_GAS_PRICE_GWEI=20
PRIORITY_FEE_GWEI=2

# Monitoring & Alerts
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Alert Webhooks (optional)
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Database
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/bot.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/bsc_bot

# API Server (optional web interface)
API_PORT=3000
API_SECRET=your-api-secret-key-here
ENABLE_WEB_INTERFACE=false

# Strategy Configuration
ENABLE_GRID_STRATEGY=false
ENABLE_ARBITRAGE_DETECTION=false
MIN_ARBITRAGE_PROFIT_BPS=50

# Risk Management
MAX_POSITION_SIZE_BNB=10
MAX_DAILY_VOLUME_BNB=100
ENABLE_EMERGENCY_STOP=true
EMERGENCY_STOP_LOSS_PERCENT=10

# Development/Testing
TESTNET_MODE=false
DRY_RUN_MODE=false
FORK_BLOCK_NUMBER=