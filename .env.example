# ================================
# BSC Bot & BianDEX Platform Configuration
# ================================

# === Environment ===
NODE_ENV=development
PORT=10001

# === Database Configuration ===
# SQLite (Development)
DB_PATH=./data/bot.db

# PostgreSQL (Production)
# DB_CLIENT=pg
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bsc_bot
# DB_USER=postgres
# DB_PASSWORD=your-secure-password

# === Security ===
JWT_SECRET=dev-secret-key-for-testing-only-256bits-long
ENCRYPTION_PASSWORD=your-encryption-password-min-32-chars

# === Module Configuration ===
# Enable/Disable platform modules
ENABLE_TRADING_BOT=true       # Trading bot functionality
ENABLE_BIANDEX=true           # BianDEX decentralized exchange
ENABLE_MONITORING=true        # Monitoring and alerts
ENABLE_GOVERNANCE=false       # DAO governance (requires ENABLE_BIANDEX=true)

# === Blockchain Configuration ===
RPC_URL=https://bsc-dataseed1.binance.org/
RPC_FALLBACK_URLS=https://bsc-dataseed2.binance.org/,https://bsc-dataseed3.binance.org/

# Chain ID (BSC Mainnet: 56, BSC Testnet: 97)
CHAIN_ID=56

# === BianDEX Contract Addresses ===
# Leave empty for local/testnet development
# Fill in after deployment to mainnet
BIANDEX_FACTORY_ADDRESS=
BIANDEX_ROUTER_ADDRESS=
BIANDEX_LP_MINING_ADDRESS=
BIANDEX_GOVERNANCE_ADDRESS=
BIANDEX_REWARD_TOKEN_ADDRESS=

# === Trading Bot Configuration ===
# Default gas settings
GAS_PRICE_GWEI=5
MAX_GAS_PRICE_GWEI=20
GAS_LIMIT=300000

# Trading limits
MAX_TRADE_AMOUNT_BNB=1.0
MIN_TRADE_AMOUNT_BNB=0.01

# Slippage tolerance (percentage)
DEFAULT_SLIPPAGE=0.5
MAX_SLIPPAGE=3.0

# === PancakeSwap Integration ===
PANCAKESWAP_ROUTER_V2=0x10ED43C718714eb63d5aA57B78B54704E256024E
PANCAKESWAP_FACTORY_V2=0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73

# === API Configuration ===
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:10004

# API rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# === Monitoring & Logging ===
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, pretty

# Sentry (Error tracking)
# SENTRY_DSN=

# === WebSocket Configuration ===
WS_PORT=10002
WS_PATH=/ws

# === Frontend Configuration ===
NEXT_PUBLIC_API_URL=http://localhost:10001
NEXT_PUBLIC_WS_URL=ws://localhost:10002
NEXT_PUBLIC_CHAIN_ID=56

# === External Services ===
# CoinGecko API (for price data)
COINGECKO_API_KEY=

# DexScreener API (no key required)
# The Graph API (no key required)

# === Shared Services (for independent deployment) ===
# Uncomment when deploying modules separately
# SHARED_WALLET_API=https://wallets.example.com
# WALLET_API_KEY=
# SHARED_MONITORING_API=https://monitoring.example.com
# MONITORING_API_KEY=

# === Development Settings ===
# Disable authentication in development
DISABLE_AUTH=true

# Enable debug mode
DEBUG=false

# Hot reload
HOT_RELOAD=true

# === Production Settings ===
# Enable these in production deployment
# NODE_ENV=production
# DISABLE_AUTH=false
# LOG_LEVEL=warn
# RATE_LIMIT_MAX_REQUESTS=50

# === Deployment Scenarios ===
# Scenario 1: Full Platform (Current default)
# ENABLE_TRADING_BOT=true
# ENABLE_BIANDEX=true

# Scenario 2: Trading Bot Only
# ENABLE_TRADING_BOT=true
# ENABLE_BIANDEX=false

# Scenario 3: BianDEX Only
# ENABLE_TRADING_BOT=false
# ENABLE_BIANDEX=true

# Scenario 4: Minimal (Core services only)
# ENABLE_TRADING_BOT=false
# ENABLE_BIANDEX=false
# ENABLE_MONITORING=true
