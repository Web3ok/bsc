# BSC Trading Bot - Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit the actual .env.production file to version control

# ===== CRITICAL SECURITY SETTINGS =====
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_MIN_256_BITS
WALLET_ENCRYPTION_PASSWORD=YOUR_STRONG_ENCRYPTION_PASSWORD

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
PORT=10001
HOST=0.0.0.0
LOG_LEVEL=info

# ===== DATABASE CONFIGURATION =====
# For PostgreSQL in production
DATABASE_URL=postgresql://username:password@localhost:5432/bsc_trading_bot
DATABASE_MAX_CONNECTIONS=20
DATABASE_SSL=true

# For SQLite (not recommended for production)
# DATABASE_URL=./data/production.db

# ===== BLOCKCHAIN CONFIGURATION =====
# Primary BSC RPC endpoints (use multiple for redundancy)
BSC_RPC_PRIMARY=https://bsc-dataseed1.binance.org/
BSC_RPC_BACKUP_1=https://bsc-dataseed2.binance.org/
BSC_RPC_BACKUP_2=https://bsc-dataseed3.binance.org/
BSC_RPC_BACKUP_3=https://bsc-dataseed4.binance.org/

# Private RPC (if available)
# BSC_RPC_PRIVATE=https://your-private-node.com

# Chain ID (56 for BSC Mainnet)
CHAIN_ID=56

# ===== PRICE SERVICE CONFIGURATION =====
COINGECKO_API_KEY=YOUR_COINGECKO_PRO_API_KEY
COINGECKO_API_URL=https://pro-api.coingecko.com/api/v3
PRICE_CACHE_TTL=300
PRICE_FALLBACK_STRATEGY=warn

# ===== MONITORING & ALERTS CONFIGURATION =====
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#trading-alerts

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ALERT_EMAIL_FROM=BSC Trading Bot <alerts@yourdomain.com>
ALERT_EMAIL_TO=team@yourdomain.com

# Webhook
WEBHOOK_URL=https://your-monitoring-system.com/webhook
WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# Alert Thresholds
ALERT_HIGH_GAS_THRESHOLD=50
ALERT_PRICE_CHANGE_THRESHOLD=10
ALERT_TRANSACTION_FAIL_THRESHOLD=5
ALERT_COOLDOWN_MINUTES=15

# ===== TRADING CONFIGURATION =====
# Slippage tolerance (in percentage)
DEFAULT_SLIPPAGE=0.5
MAX_SLIPPAGE=5

# Gas settings
GAS_PRICE_MULTIPLIER=1.1
MAX_GAS_PRICE_GWEI=20

# Trading limits
MAX_TRADE_SIZE_BNB=10
MIN_TRADE_SIZE_BNB=0.01
DAILY_TRADE_LIMIT_BNB=100

# ===== SECURITY SETTINGS =====
# CORS
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TRADING_MAX_REQUESTS=10

# Session
SESSION_TIMEOUT_HOURS=24
MAX_CONCURRENT_SESSIONS=5

# ===== LOGGING CONFIGURATION =====
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30
LOG_COMPRESS=true
ERROR_LOG_FILE=./logs/error.log
COMBINED_LOG_FILE=./logs/combined.log
ACCESS_LOG_FILE=./logs/access.log

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backup/bsc-trading-bot
BACKUP_ENCRYPTION_KEY=YOUR_BACKUP_ENCRYPTION_KEY

# ===== MONITORING ENDPOINTS =====
HEALTH_CHECK_PATH=/api/health
METRICS_PATH=/api/metrics
METRICS_SECRET=YOUR_METRICS_SECRET

# ===== PERFORMANCE TUNING =====
WORKER_PROCESSES=4
WORKER_MEMORY_LIMIT=512M
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
CACHE_REDIS_URL=redis://localhost:6379

# ===== FEATURE FLAGS =====
ENABLE_TRADING=true
ENABLE_MONITORING=true
ENABLE_ALERTS=true
ENABLE_AUTO_REBALANCE=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_MAINTENANCE_MODE=false

# ===== DEPLOYMENT INFO =====
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_TIMESTAMP=
DEPLOYMENT_COMMIT_HASH=