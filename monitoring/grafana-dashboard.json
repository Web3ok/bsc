{
  "dashboard": {
    "id": null,
    "title": "BSC Market Maker Bot - Overview",
    "tags": ["bsc", "trading", "funds", "strategies"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "System Status Overview",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            },
            "unit": "none",
            "decimals": 0
          }
        },
        "options": {
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "targets": [
          {
            "expr": "up{job=\"bsc-bot\"}",
            "legendFormat": "Bot Status",
            "refId": "A"
          },
          {
            "expr": "bsc_bot_strategy_manager_running",
            "legendFormat": "Strategy Manager",
            "refId": "B"
          },
          {
            "expr": "bsc_bot_funds_manager_running",
            "legendFormat": "Funds Manager",
            "refId": "C"
          },
          {
            "expr": "bsc_bot_market_data_connected",
            "legendFormat": "Market Data",
            "refId": "D"
          }
        ]
      },
      {
        "id": 2,
        "title": "Active Strategies",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "none",
            "decimals": 0
          }
        },
        "targets": [
          {
            "expr": "bsc_bot_strategies_total",
            "legendFormat": "Total Strategies",
            "refId": "A"
          },
          {
            "expr": "bsc_bot_strategies_active",
            "legendFormat": "Active Strategies",
            "refId": "B"
          },
          {
            "expr": "bsc_bot_strategies_paused",
            "legendFormat": "Paused Strategies",
            "refId": "C"
          }
        ]
      },
      {
        "id": 3,
        "title": "Trading Performance",
        "type": "graph",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
        "xAxis": { "show": true },
        "yAxes": [
          {
            "label": "PnL (USDT)",
            "show": true,
            "min": null,
            "max": null
          },
          {
            "label": "Trades Count",
            "show": true,
            "min": 0
          }
        ],
        "targets": [
          {
            "expr": "rate(bsc_bot_strategy_pnl_total[5m])",
            "legendFormat": "PnL Rate (5m)",
            "refId": "A"
          },
          {
            "expr": "rate(bsc_bot_trades_total[5m])",
            "legendFormat": "Trade Rate (5m)",
            "yAxisIndex": 1,
            "refId": "B"
          }
        ]
      },
      {
        "id": 4,
        "title": "Funds Management Status",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 16 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "green", "value": 2 }
              ]
            },
            "unit": "none"
          }
        },
        "targets": [
          {
            "expr": "bsc_bot_gas_drip_running + bsc_bot_sweeper_running + bsc_bot_rebalancer_running",
            "legendFormat": "Active Services",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Treasury Balance",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 16 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 1000 },
                { "color": "yellow", "value": 5000 },
                { "color": "green", "value": 10000 }
              ]
            },
            "unit": "currencyUSD"
          }
        },
        "targets": [
          {
            "expr": "bsc_bot_treasury_balance_usd",
            "legendFormat": "Treasury USD",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Gas Balance Alert",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 16 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            },
            "unit": "none"
          }
        },
        "targets": [
          {
            "expr": "bsc_bot_wallets_low_gas",
            "legendFormat": "Low Gas Wallets",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Strategy PnL Distribution",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "continuous-GrYlRd" },
            "unit": "currencyUSD",
            "decimals": 2
          }
        },
        "targets": [
          {
            "expr": "bsc_bot_strategy_pnl_total",
            "legendFormat": "{{strategy_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Fund Operations (24h)",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "none",
            "decimals": 0
          }
        },
        "targets": [
          {
            "expr": "increase(bsc_bot_gas_topups_total[24h])",
            "legendFormat": "Gas Top-ups",
            "refId": "A"
          },
          {
            "expr": "increase(bsc_bot_sweeps_total[24h])",
            "legendFormat": "Sweeps",
            "refId": "B"
          },
          {
            "expr": "increase(bsc_bot_rebalances_total[24h])",
            "legendFormat": "Rebalances",
            "refId": "C"
          }
        ]
      },
      {
        "id": 9,
        "title": "System Resource Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 30 },
        "yAxes": [
          {
            "label": "Percentage",
            "show": true,
            "min": 0,
            "max": 100
          }
        ],
        "targets": [
          {
            "expr": "100 * (1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])))",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
            "legendFormat": "Memory Usage %",
            "refId": "B"
          },
          {
            "expr": "100 * (1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}))",
            "legendFormat": "Disk Usage %",
            "refId": "C"
          }
        ]
      },
      {
        "id": 10,
        "title": "API Response Times",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 38 },
        "yAxes": [
          {
            "label": "Milliseconds",
            "show": true,
            "min": 0
          }
        ],
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ]
      },
      {
        "id": 11,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 38 },
        "yAxes": [
          {
            "label": "Errors/sec",
            "show": true,
            "min": 0
          }
        ],
        "targets": [
          {
            "expr": "rate(bsc_bot_errors_total[5m])",
            "legendFormat": "Error Rate",
            "refId": "A"
          },
          {
            "expr": "rate(bsc_bot_strategy_errors_total[5m])",
            "legendFormat": "Strategy Errors",
            "refId": "B"
          },
          {
            "expr": "rate(bsc_bot_funds_errors_total[5m])",
            "legendFormat": "Funds Errors",
            "refId": "C"
          }
        ]
      },
      {
        "id": 12,
        "title": "WebSocket Connection Status",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 0, "y": 46 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "bsc_bot_websocket_connected",
            "legendFormat": "Connected",
            "refId": "A"
          }
        ]
      },
      {
        "id": 13,
        "title": "Database Connection Pool",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 8, "y": 46 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "none"
          }
        },
        "targets": [
          {
            "expr": "bsc_bot_db_connections_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "bsc_bot_db_connections_idle",
            "legendFormat": "Idle",
            "refId": "B"
          }
        ]
      },
      {
        "id": 14,
        "title": "Recent Alerts",
        "type": "table",
        "gridPos": { "h": 4, "w": 8, "x": 16, "y": 46 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" }
          }
        },
        "targets": [
          {
            "expr": "ALERTS{alertname!=\"\"}",
            "legendFormat": "{{alertname}} - {{severity}}",
            "refId": "A",
            "format": "table"
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "resets(bsc_bot_build_info[1h])",
          "iconColor": "blue",
          "textFormat": "Deployment"
        },
        {
          "name": "Strategy Changes",
          "datasource": "Prometheus", 
          "enable": true,
          "expr": "changes(bsc_bot_strategies_total[1h])",
          "iconColor": "green",
          "textFormat": "Strategy Modified"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"bsc-bot\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "strategy",
          "type": "query", 
          "query": "label_values(bsc_bot_strategy_pnl_total, strategy_name)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "links": [
      {
        "title": "Logs",
        "url": "/d/logs-dashboard",
        "type": "dashboards"
      },
      {
        "title": "Alerts",
        "url": "/alerting/list",
        "type": "link"
      }
    ]
  }
}