# Test Environment Configuration
# Copy to .env and modify for actual use

# BSC RPC Configuration
RPC_URL=https://bsc-dataseed1.binance.org/
RPC_BACKUP_URLS=https://bsc-dataseed2.binance.org/,https://bsc-dataseed3.binance.org/

# Security & Encryption
ENCRYPTION_PASSWORD=test_password_change_this_in_production
WALLET_STORAGE_PATH=./test_wallets

# Database
DB_TYPE=sqlite
DB_PATH=./data/test_bot.db

# Development Settings
NODE_ENV=development
ENABLE_DRY_RUN=true

# Gas & Transaction Settings
DEFAULT_GAS_LIMIT=200000
MAX_GAS_PRICE_GWEI=5
PRIORITY_FEE_GWEI=1

# Trading Defaults
DEFAULT_SLIPPAGE=0.5
MIN_BNB_BALANCE=0.01
MAX_CONCURRENT_TXS=2

# Security Features (for testing)
ENABLE_WHITELIST=false
ENABLE_BLACKLIST=false
MAX_DAILY_VOLUME_BNB=1