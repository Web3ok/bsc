# ==========================================
# BSC Trading Bot - Frontend Configuration
# ==========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:10001
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:10001

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=56
NEXT_PUBLIC_RPC_URL=https://bsc-dataseed.binance.org/

# Application Configuration
NEXT_PUBLIC_APP_NAME=BSC Trading Bot
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_I18N=true
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Development Configuration
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_USE_MOCK_DATA=false

# Analytics & Monitoring (optional)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ==========================================
# Production Configuration Notes
# ==========================================
# For production deployment:
# 1. Update NEXT_PUBLIC_API_URL to your production API domain
# 2. Update NEXT_PUBLIC_WEBSOCKET_URL to wss:// (secure WebSocket)
# 3. Set NEXT_PUBLIC_DEBUG=false
# 4. Configure analytics and monitoring
# 5. Update RPC_URL to a reliable paid service
