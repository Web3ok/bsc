# ================================
# Production Environment Configuration
# ================================

# === Environment ===
NODE_ENV=production
PORT=10001

# === Security (CHANGE THESE!) ===
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_MIN_64_CHARS_LONG_XXXXXXXXXX
ENCRYPTION_PASSWORD=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS_LONG_XX

# === Database Configuration ===
# PostgreSQL (Production)
DB_CLIENT=pg
DB_HOST=your-db-host.com
DB_PORT=5432
DB_NAME=bsc_bot_production
DB_USER=bot_user
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# === Module Configuration ===
ENABLE_TRADING_BOT=true
ENABLE_BIANDEX=true
ENABLE_MONITORING=true
ENABLE_GOVERNANCE=false

# === Blockchain Configuration ===
# Use premium RPC endpoints in production
RPC_URL=https://bsc-dataseed.binance.org/
RPC_FALLBACK_URLS=https://bsc-dataseed1.binance.org/,https://bsc-dataseed2.binance.org/,https://bsc-dataseed3.binance.org/

CHAIN_ID=56

# === BianDEX Contract Addresses ===
# IMPORTANT: Fill these after deploying contracts
BIANDEX_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
BIANDEX_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000
BIANDEX_LP_MINING_ADDRESS=0x0000000000000000000000000000000000000000
BIANDEX_GOVERNANCE_ADDRESS=0x0000000000000000000000000000000000000000
BIANDEX_REWARD_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# === Trading Bot Configuration ===
GAS_PRICE_GWEI=3
MAX_GAS_PRICE_GWEI=20
GAS_LIMIT=300000

MAX_TRADE_AMOUNT_BNB=10.0
MIN_TRADE_AMOUNT_BNB=0.01

DEFAULT_SLIPPAGE=0.5
MAX_SLIPPAGE=2.0

# === PancakeSwap Integration ===
PANCAKESWAP_ROUTER_V2=0x10ED43C718714eb63d5aA57B78B54704E256024E
PANCAKESWAP_FACTORY_V2=0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73

# === API Configuration ===
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50

# === Monitoring & Logging ===
LOG_LEVEL=warn
LOG_FORMAT=json

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === WebSocket Configuration ===
WS_PORT=10002
WS_PATH=/ws

# === Frontend Configuration ===
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
NEXT_PUBLIC_CHAIN_ID=56

# === External Services ===
COINGECKO_API_KEY=your-coingecko-api-key

# === Security Settings ===
DISABLE_AUTH=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# === SSL/TLS ===
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem

# === Backup Configuration ===
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/bsc-bot

# === Performance ===
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
